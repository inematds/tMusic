{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "plugins": [],
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": ["node_modules", ".next"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": [],
      "extends": [],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
